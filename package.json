{
  "name": "email-sorter-rag",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.16.2",
    "glob": "^11.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "env:sync": "conda env update --file environment.yaml --prune",
    "ingest": "conda run -n email-sorter python .continue/rag/ingest_emails.py",
    "watch": "nodemon --delay 2.5 --watch D:/path/to/your/emails -e eml --exec \"npm run ingest\""
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "chokidar-cli": "^3.0.0"
  }
}