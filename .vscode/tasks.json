{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Marimo App",
      "type": "shell",
      "command": "marimo run notebooks/main.py",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "RAG: Index Codebase",
      "type": "shell",
      "command": "npm run index",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "RAG: Query",
      "type": "shell",
      "command": "npm run query 'Hello'",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "RAG: Watch",
      "type": "shell",
      "command": "npx chokidar '**/*.{py,ts,md}' -c 'npm run index' --ignore '.continue/**'",
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "watching",
          "endsPattern": "Indexed"
        }
      }
    }
  ]
}
